        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/african_lion"/>

    <ImageView
        android:id="@+id/hyena"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/hyena"/>

    <ImageView
        android:id="@+id/tiger"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/tiger"/>

    <ImageView
        android:id="@+id/asianelephant"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/asianelephant1"/>

    <ImageView
        android:id="@+id/baldeagle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bald_eagle"/>

    <ImageView
        android:id="@+id/cheetah"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cheetah"/>

    <ImageView
        android:id="@+id/sloth"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sloth"/>

    <ImageView
        android:id="@+id/oragutan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/orangutan"/>

    <ImageView
        android:id="@+id/wolf"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/mexican_wolf"/>

    <ImageView
        android:id="@+id/jaguar"
        android:layout_width="42dp"
        android:layout_height="411dp"
        android:src="@drawable/jaguar" />

    <ImageView
        android:id="@+id/giraffe"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/giraffe"/>

    <ImageView
        android:id="@+id/bear"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/andean_bear"/>

    <ImageView
        android:id="@+id/mountainlion"
        android:layout_width="100dp"
