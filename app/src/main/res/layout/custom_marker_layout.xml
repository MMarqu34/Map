    <ImageView
        android:id="@+id/rhino"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/white_rhino"/>

    <ImageView
        android:id="@+id/otter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/otter"/>

    <ImageView
        android:id="@+id/fox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/fennec_fox"/>

    <ImageView
        android:id="@+id/flamingo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/flamingo"/>

    <ImageView
        android:id="@+id/zebra"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/zebra"/>

    <ImageView
        android:id="@+id/baboon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baboon"/>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_weight="50">



        <TextView
            android:text="Animal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtAnimal"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="#000"/>

    </LinearLayout>

</LinearLayout>